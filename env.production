# SkillPort Community - Production Environment Variables

# Application Configuration
NODE_ENV=production
PORT=3000
BACKEND_PORT=3001

# Database Configuration
DATABASE_URL=postgresql://skillport:${DB_PASSWORD}@${RDS_ENDPOINT}:5432/skillport_prod
DATABASE_URL_DIRECT=postgresql://skillport:${DB_PASSWORD}@${RDS_ENDPOINT}:5432/skillport_prod

# Authentication & Security
JWT_SECRET=${JWT_SECRET}
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}
NEXTAUTH_URL=https://skillport.com
NEXTAUTH_URL_INTERNAL=https://api.skillport.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# S3 Configuration
AWS_S3_BUCKET=skillport-assets-prod
AWS_S3_REGION=us-east-1
AWS_S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_ID=${CLOUDFRONT_DISTRIBUTION_ID}
CLOUDFRONT_DOMAIN=cdn.skillport.com

# Redis Configuration (ElastiCache)
REDIS_URL=redis://${REDIS_ENDPOINT}:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@skillport.com

# WebSocket Configuration
WS_URL=wss://ws.skillport.com
WS_PORT=3002

# Monitoring & Logging
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ORG=${SENTRY_ORG}
SENTRY_PROJECT=${SENTRY_PROJECT}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/ecs/skillport
CLOUDWATCH_REGION=us-east-1

# Razorpay Configuration (for payments)
RAZORPAY_KEY_ID=${RAZORPAY_KEY_ID}
RAZORPAY_KEY_SECRET=${RAZORPAY_KEY_SECRET}

# Google Analytics
GA_TRACKING_ID=${GA_TRACKING_ID}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://skillport.com,https://www.skillport.com,https://api.skillport.com

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_MAX_AGE=86400000

# API Configuration
API_BASE_URL=https://api.skillport.com
FRONTEND_URL=https://skillport.com

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security Headers
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
