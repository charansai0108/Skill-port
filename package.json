{
  "name": "skillport-community-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:push": "npm run db:push --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend",
    "install:all": "npm install && npm run install:apps && npm run install:packages && npm run install:backend",
    "install:apps": "npm install --workspace=apps/web && npm install --workspace=apps/extension",
    "install:packages": "npm install --workspace=packages/ui && npm install --workspace=packages/utils && npm install --workspace=packages/types && npm install --workspace=packages/hooks",
    "install:backend": "npm install --workspace=backend"
  },
  "devDependencies": {
    "lerna": "^8.0.0"
  }
}
