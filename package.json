{
  "name": "skillport-otp-server",
  "version": "1.0.0",
  "description": "OTP verification server for SkillPort",
  "main": "otp-server.js",
  "scripts": {
    "start": "node otp-server.js",
    "dev": "nodemon otp-server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "emulator": "firebase emulators:start --only functions,firestore,hosting,storage",
    "emulator:all": "firebase emulators:start",
    "emulator:test": "firebase emulators:exec --only functions,firestore,storage 'npm test'",
    "test:emulator": "./scripts/test-emulator.sh",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:storage": "firebase deploy --only storage",
    "deploy:all": "firebase deploy",
    "deploy:staging": "firebase use staging && firebase deploy",
    "deploy:production": "firebase use production && firebase deploy",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "echo 'Build not required for this project'"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "nodemailer": "^6.9.7",
    "otp-generator": "^4.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "eslint-plugin-jest": "^27.6.0",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "functions/src/**/*.js",
      "client/js/**/*.js",
      "SKILL-EXTENSION/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/utils/setup.js"
    ],
    "testTimeout": 30000
  },
  "keywords": [
    "skillport",
    "testing",
    "firebase",
    "jest",
    "playwright"
  ],
  "author": "SkillPort Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
