# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/skillport_db"
# For AWS RDS: postgresql://skillport:password@your-rds-endpoint:5432/skillport_prod

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here-min-32-chars"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (for verification and password reset)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@skillport.com"

# Frontend URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
# For AWS: https://your-domain.com

# AWS Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# S3 Configuration
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_S3_REGION="us-east-1"
AWS_S3_ENDPOINT="https://s3.us-east-1.amazonaws.com"

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_ID="your-cloudfront-distribution-id"
CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"

# Redis Configuration (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"
# For AWS ElastiCache: redis://your-redis-endpoint:6379
REDIS_PASSWORD="your-redis-password"

# Razorpay Configuration (for payments)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
NEXT_PUBLIC_RAZORPAY_KEY_ID="your-razorpay-public-key-id"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Error Monitoring (Sentry)
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Security
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"
# For AWS: https://your-domain.com

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# CloudWatch Logging
CLOUDWATCH_LOG_GROUP="/aws/ecs/skillport"
CLOUDWATCH_REGION="us-east-1"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,https://your-domain.com"

# Session Configuration
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE=86400000
