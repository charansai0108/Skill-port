# SkillPort Community - Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
BACKEND_PORT=3001
EXTENSION_PORT=3002

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (AWS RDS)
DATABASE_URL=postgresql://skillport:YOUR_DB_PASSWORD@your-rds-endpoint.region.rds.amazonaws.com:5432/skillport_prod
DATABASE_URL_DIRECT=postgresql://skillport:YOUR_DB_PASSWORD@your-rds-endpoint.region.rds.amazonaws.com:5432/skillport_prod

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://skillport.com
NEXTAUTH_URL_INTERNAL=https://api.skillport.com

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Configuration
AWS_S3_BUCKET=skillport-assets-prod
AWS_S3_REGION=us-east-1
AWS_S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id
CLOUDFRONT_DOMAIN=cdn.skillport.com

# =============================================================================
# REDIS CONFIGURATION (ElastiCache)
# =============================================================================
REDIS_URL=redis://your-redis-endpoint.cache.amazonaws.com:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration (Gmail, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@skillport.com

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_URL=wss://ws.skillport.com
WS_PORT=3002

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=skillport-community
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/ecs/skillport
CLOUDWATCH_REGION=us-east-1

# =============================================================================
# PAYMENT GATEWAY (Razorpay)
# =============================================================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# =============================================================================
# ANALYTICS
# =============================================================================
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://skillport.com,https://www.skillport.com,https://api.skillport.com

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=https://api.skillport.com
FRONTEND_URL=https://skillport.com

# =============================================================================
# DATABASE POOL CONFIGURATION
# =============================================================================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
