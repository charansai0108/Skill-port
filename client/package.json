{
  "name": "skillport-frontend",
  "version": "1.0.0",
  "description": "SkillPort Community Platform Frontend",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8000",
    "build": "tailwindcss -i ./css/tailwind.css -o ./css/tailwind.min.css --minify",
    "build:watch": "tailwindcss -i ./css/tailwind.css -o ./css/tailwind.min.css --watch",
    "test": "jest",
    "test:otp": "jest tests/otp.integration.test.js --runInBand",
    "test:auth": "jest tests/authManager.unit.test.js --runInBand",
    "emulators": "firebase emulators:start --only auth,firestore,functions",
    "lint": "echo 'No linter configured - add ESLint or other linter here'",
    "serve": "python3 -m http.server 8000",
    "audit": "npm audit --audit-level moderate"
  },
  "keywords": [
    "skillport",
    "education",
    "community",
    "frontend"
  ],
  "author": "SkillPort Team",
  "license": "MIT",
  "dependencies": {
    "firebase": "^10.14.1"
  },
  "devDependencies": {
    "cypress": "^13.0.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "jest": "^29.7.0",
    "firebase": "^10.12.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}
