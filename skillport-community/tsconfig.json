{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/web/*"],
      "@/components/*": ["./packages/ui/*"],
      "@/lib/*": ["./packages/utils/*"],
      "@/types/*": ["./packages/types/*"],
      "@/hooks/*": ["./packages/hooks/*"],
      "@/backend/*": ["./backend/*"]
    }
  },
  "include": [
    "apps/web/**/*",
    "packages/**/*",
    "backend/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "apps/web/.next",
    "apps/web/out",
    "backend/dist"
  ]
}
