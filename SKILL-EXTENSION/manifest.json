{
  "manifest_version": 3,
  "name": "SkillPort Tracker",
  "version": "1.0.1",
  "description": "Secure submission tracking for LeetCode, GFG, HackerRank, and InterviewBit.",
  "permissions": [
    "scripting", 
    "activeTab", 
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.leetcode.com/*",
    "https://geeksforgeeks.org/*",
    "https://www.geeksforgeeks.org/*",
    "https://hackerrank.com/*",
    "https://www.hackerrank.com/*",
    "https://interviewbit.com/*",
    "https://www.interviewbit.com/*",
    "http://localhost:5001/*",
    "http://127.0.0.1:5001/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SkillPort Tracker"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*/submissions/*",
        "https://www.leetcode.com/problems/*/submissions/*"
      ],
      "js": ["content_scripts/leetcode.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://practice.geeksforgeeks.org/problems/*",
        "https://www.geeksforgeeks.org/problems/*"
      ],
      "js": ["content_scripts/gfg.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.hackerrank.com/challenges/*/submissions/*",
        "https://hackerrank.com/challenges/*/submissions/*"
      ],
      "js": ["content_scripts/hackerrank.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.interviewbit.com/problems/*/submissions/*",
        "https://interviewbit.com/problems/*/submissions/*"
      ],
      "js": ["content_scripts/interviewbit.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
