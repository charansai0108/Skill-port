{
  "manifest_version": 3,
  "name": "SkillPort Tracker",
  "version": "1.0",
  "description": "Track submissions from LeetCode, GFG, HackerRank, and InterviewBit.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.geeksforgeeks.org/*",
    "*://*.hackerrank.com/*",
    "*://*.interviewbit.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.leetcode.com/*"],
      "js": ["content_scripts/leetcode.js"]
    },
    {
      "matches": ["*://*.geeksforgeeks.org/*"],
      "js": ["content_scripts/gfg.js"]
    },
    {
      "matches": ["*://*.hackerrank.com/*"],
      "js": ["content_scripts/hackerrank.js"]
    },
    {
      "matches": ["*://*.interviewbit.com/*"],
      "js": ["content_scripts/interviewbit.js"]
    }
  ]
}
