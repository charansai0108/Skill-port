{
  "projectName": "SkillPort Community",
  "version": "1.0.0",
  "cleanup": {
    "deleteExtensions": [".md", ".log", ".tmp", ".temp", ".cache", ".bak", ".old", ".swp", ".swo"],
    "deletePatterns": [
      "*.log",
      "*.tmp",
      "*.temp",
      "*.cache",
      "*.bak",
      "*.old",
      "*.swp",
      "*.swo",
      ".DS_Store",
      "Thumbs.db",
      "*.pid",
      "*.seed",
      "*.pid.lock"
    ],
    "essentialFiles": [
      "README.md",
      "CONTRIBUTING.md",
      "LICENSE.md",
      "CHANGELOG.md",
      "package.json",
      "package-lock.json",
      "yarn.lock",
      "firebase.json",
      "firestore.rules",
      "storage.rules",
      ".firebaserc",
      ".gitignore",
      ".env.example",
      "tsconfig.json",
      "webpack.config.js",
      "babel.config.js",
      "jest.config.js",
      "playwright.config.js"
    ],
    "skipDirectories": [
      "node_modules",
      ".git",
      ".vscode",
      ".idea",
      "dist",
      "build",
      "coverage",
      ".nyc_output",
      "logs",
      ".next",
      ".nuxt",
      "out",
      ".cache",
      ".parcel-cache"
    ],
    "skipPatterns": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/coverage/**",
      "**/.nyc_output/**",
      "**/logs/**"
    ],
    "referenceFileTypes": [".html", ".js", ".css", ".ts", ".tsx", ".jsx", ".vue", ".svelte"],
    "assetFileTypes": [".png", ".jpg", ".jpeg", ".gif", ".svg", ".ico", ".webp", ".woff", ".woff2", ".ttf", ".eot"],
    "smartAnalysis": {
      "enabled": true,
      "checkImports": true,
      "checkReferences": true,
      "checkAssets": true,
      "deepAnalysis": false
    }
  },
  "reporting": {
    "generateReport": true,
    "reportFormat": "console",
    "saveReport": true,
    "reportFile": "cleanup-report.json"
  },
  "safety": {
    "dryRun": true,
    "backupBeforeCleanup": false,
    "confirmBeforeDelete": true,
    "maxFileSize": "10MB",
    "excludeLargeFiles": true
  }
}
