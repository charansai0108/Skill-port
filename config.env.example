# SkillPort Environment Configuration
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
PORT=5001
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/skillport
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=skillport

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_change_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_change_in_production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# CORS Configuration
CORS_ORIGIN=http://localhost:8000,http://localhost:3000,http://localhost:8080

# Frontend Configuration
FRONTEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:5001/api/v1

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=skillport24@gmail.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/combined.log
ERROR_LOG_FILE=./logs/error.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Development
DEBUG=false
VERBOSE_LOGGING=false
